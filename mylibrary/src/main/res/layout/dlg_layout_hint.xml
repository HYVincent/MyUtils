<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/shape_background_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:textSize="@dimen/text_size_18sp"
            android:textColor="@color/color_black_3d4550"
            android:text="title"
            android:layout_marginTop="@dimen/size_25"
            android:layout_gravity="center"
            android:id="@+id/dlg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/dlg_content"
            android:text="context"
            android:textColor="@color/color_gray_9fa1a9"
            android:layout_marginTop="@dimen/size_30"
            android:layout_marginBottom="@dimen/size_30"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <include layout="@layout/common_layout_line_f1f3f4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dlg_cancel_tv"
                android:textSize="@dimen/text_size_15sp"
                android:text="取消"
                android:paddingBottom="@dimen/size_15"
                android:paddingTop="@dimen/size_15"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="@dimen/size_1"
                android:layout_height="match_parent"
                android:background="@color/color_gray_f1f3f4"/>

            <TextView
                android:id="@+id/dlg_ok_tv"
                android:textSize="@dimen/text_size_15sp"
                android:text="确定"
                android:paddingBottom="@dimen/size_15"
                android:paddingTop="@dimen/size_15"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>